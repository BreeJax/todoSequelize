<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles.css">
    <title>TODO List</title>
  </head>
  <body>
    <form class="" action="/add" method="post">
      <input type="text" name="description" placeholder="Add a todo" value="">
      <button type="submit" name="button">Add todo</button>
    </form>
    <ul>
      {{#todos}}
      <li>
        <form class="" action="/completed" method="post">
          <button type="submit" name="buttonComplete"> Task Completed</button>
          <input type="hidden" name="id" value="{{id}}">
          {{description}}
        </form>
      </li>
      {{/todos}}
    </ul>
    <h3>Completed Tasks</h3>
    <ul>
      {{#fintodos}}
      <li>{{description}} @ {{completedAt}}</li>
      <form class="" action="/destroy" method="post">
        <button type="submit" name="id" value="{{id}}">Delete this!</button>
      </form>
      {{/fintodos}}
    </ul>
  </body>
</html>
